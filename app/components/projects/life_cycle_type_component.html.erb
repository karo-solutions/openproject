<%= flex_layout(align_items: :center,
                justify_content: :space_between) do |element_container|
  element_container.with_column(mr: 1, style: "color: #{icon_color}") do
    render Primer::Beta::Octicon.new(icon: icon)
  end
  element_container.with_column do
    render(Primer::Beta::Text.new(**text_options)) { text }
  end
end %>
